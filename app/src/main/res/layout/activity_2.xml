<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2"
    android:background="@drawable/bg">

    <Button
        android:id="@+id/button2"
        android:layout_width="243dp"
        android:layout_height="49dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#131517"
        android:drawableLeft="@drawable/baseline_camera_alt_24"
        android:fontFamily="@font/aclonica"
        android:text="Capture Image"
        android:textColor="#A3EAF3"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/button3"
        android:layout_width="241dp"
        android:layout_height="51dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#08090B"
        android:drawableLeft="@drawable/baseline_cloud_upload_24"
        android:fontFamily="@font/aclonica"
        android:text="Upload image"
        android:textColor="#A3EAF3"
        app:cornerRadius="30dp"
        app:iconTint="#5CA1D8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button4"
        android:layout_width="55dp"
        android:layout_height="63dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#131313"
        android:textColor="#6CB0CF"
        app:cornerRadius="50dp"
        app:icon="@drawable/baseline_arrow_back_ios_new_24"
        app:iconPadding="3dp"
        app:iconTint="#91E6F1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="55dp"
        android:layout_height="63dp"
        android:backgroundTint="#131313"
        android:textColor="#6CB0CF"
        app:cornerRadius="50dp"
        app:icon="@drawable/baseline_navigate_next_24"
        app:iconPadding="3dp"
        app:iconTint="#91E6F1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.979" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/rock_salt"
        android:text="Make Your Choice"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#094B68"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        app:layout_constraintBottom_toBottomOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="0.337"
        app:srcCompat="@drawable/whale2" />

</androidx.constraintlayout.widget.ConstraintLayout>